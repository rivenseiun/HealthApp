<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bkg_grey">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/theme_green"
        android:paddingLeft="@dimen/app_title_padding_lr"
        android:paddingRight="@dimen/app_title_padding_lr">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_tab3"
            android:layout_centerInParent="true"
            android:textSize="@dimen/app_title_size"
            android:textColor="@color/text_title"/>


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:padding="10dp"
        android:background="@color/white">

        <com.hubu.fan.view.imageview.CircleImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/bbs_head_icon"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"

            android:orientation="vertical">

            <TextView
                android:id="@+id/display_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="aaaaa"
                android:textSize="15dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/display_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/example_phone"
                android:textSize="15dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/display_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="类型"
                android:textSize="15dp"
                android:layout_marginTop="10dp"/>


        </LinearLayout>





    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rl_devicesel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/fun_devicesel"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/tv_devicesel_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/fun_tag"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/tv_devicesel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_toLeftOf="@id/tv_devicesel_tag"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_personersel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/fun_personersel"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:visibility="gone"
            android:layout_alignParentLeft="true"/>


        <TextView
            android:id="@+id/tv_personersel_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/fun_tag"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:visibility="gone"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/tv_personersel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_toLeftOf="@id/tv_personersel_tag"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_logout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/fun_logout"
            android:layout_centerInParent="true"
            android:textSize="15sp"/>



    </RelativeLayout>
</LinearLayout>